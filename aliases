# Unix
alias ll="ls -al"
alias lt="ls -altr"
alias e="$EDITOR"
alias ..="cd .."
alias ws="cd ~/workspace"
alias cls="clear"

alias tmux='TERM=screen-256color-bce tmux'

# SSH
alias sshr="ssh -l root"

# Bundler / rails
alias b="bundle"
alias be="bundle exec"
alias pconsole="bundle exec cap production rails:console"
alias r="rails"

#Git
alias gpp="git pull --rebase && git push"
alias gsp='git stash && git pull --rebase && git stash pop'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Helpers
alias myip='curl ifconfig.io'
alias j="vim +'normal G] Go##' +'r!date' +'normal kJo' \"/Volumes/GoogleDrive/My Drive/journal/journal_`date +%Y-%m.md`\""
alias cat="bat"

# Include custom aliases
[[ -f ~/.aliases.local  ]] && source ~/.aliases.local
